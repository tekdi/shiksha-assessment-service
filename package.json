{
  "name": "shiksha-assessment-service",
  "version": "1.0.0",
  "description": "NestJS microservice for managing the entire lifecycle of tests and assessments",
  "main": "dist/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "postinstall": "cd node_modules/@vinayak-patil/cloud-storage && npm run build",
    "migration:run": "ts-node -r tsconfig-paths/register src/scripts/migration-runner-with-polyfill.ts",
    "migration:status": "ts-node -r tsconfig-paths/register src/scripts/simple-migration-status.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaivk369/shiksha-assessment-service.git"
  },
  "keywords": [
    "nestjs",
    "assessment",
    "microservice",
    "typescript",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vaivk369/shiksha-assessment-service/issues"
  },
  "homepage": "https://github.com/vaivk369/shiksha-assessment-service#readme",
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "2.2.2",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.1",
    "@nestjs/throttler": "^6.4.0",
    "@vinayak-patil/cloud-storage": "https://github.com/vinayak-patil/cloud-storage/archive/refs/tags/v1.0.1.tar.gz",
    "axios": "^1.10.0",
    "@redis/client": "^1.6.1",
    "cache-manager": "^5.4.0",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "crypto-browserify": "^3.12.1",
    "pg": "^8.16.2",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/testing": "^10.4.20",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
